{
    "openapi": "3.1.0",
    "info": {
        "title": "BACOWR API",
        "description": "API för BACOWR SEO content generation system. Används av Custom GPT Actions.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://your-server.com/api/v1",
            "description": "Production server"
        }
    ],
    "components": {
        "securitySchemes": {
            "ApiKeyAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "X-GPT-Token"
            }
        },
        "schemas": {
            "JobCreate": {
                "type": "object",
                "required": [
                    "publisher_domain",
                    "target_url",
                    "anchor_text"
                ],
                "properties": {
                    "publisher_domain": {
                        "type": "string",
                        "description": "Domain where article will be published",
                        "example": "hemmets.se"
                    },
                    "target_url": {
                        "type": "string",
                        "description": "URL to link to",
                        "example": "https://verktyg.se/borr"
                    },
                    "anchor_text": {
                        "type": "string",
                        "description": "Anchor text for the link",
                        "example": "professionell borrmaskin"
                    }
                }
            },
            "Job": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "publisher_domain": {
                        "type": "string"
                    },
                    "target_url": {
                        "type": "string"
                    },
                    "anchor_text": {
                        "type": "string"
                    },
                    "stage": {
                        "type": "string",
                        "enum": [
                            "INTAKE",
                            "PREFLIGHT",
                            "READY_FOR_REVIEW",
                            "READY_TO_WRITE",
                            "VALIDATION",
                            "VALIDATED"
                        ]
                    },
                    "status": {
                        "type": "string"
                    }
                }
            },
            "PreflightResult": {
                "type": "object",
                "properties": {
                    "job_id": {
                        "type": "string"
                    },
                    "publisher": {
                        "type": "object",
                        "properties": {
                            "category": {
                                "type": "string"
                            },
                            "tone": {
                                "type": "string"
                            },
                            "typical_length": {
                                "type": "integer"
                            }
                        }
                    },
                    "target": {
                        "type": "object",
                        "properties": {
                            "primary_keyword": {
                                "type": "string"
                            },
                            "entities": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "semantic_intersect": {
                        "type": "object",
                        "properties": {
                            "score": {
                                "type": "string"
                            },
                            "primary_bridge": {
                                "type": "string"
                            }
                        }
                    },
                    "facit": {
                        "type": "object"
                    }
                }
            },
            "GeneratedArticle": {
                "type": "object",
                "properties": {
                    "job_id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "word_count": {
                        "type": "integer"
                    }
                }
            },
            "ValidationResult": {
                "type": "object",
                "properties": {
                    "passed": {
                        "type": "boolean"
                    },
                    "lix_score": {
                        "type": "number"
                    },
                    "ai_markers": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "recommendations": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "detail": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "security": [
        {
            "ApiKeyAuth": []
        }
    ],
    "paths": {
        "/jobs": {
            "post": {
                "operationId": "createJob",
                "summary": "Create a new content job",
                "description": "Creates a single job with publisher, target, and anchor text",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/JobCreate"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Job created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Job"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/preflight/analyze/{job_id}": {
            "post": {
                "operationId": "runPreflight",
                "summary": "Run preflight analysis",
                "description": "Analyzes publisher and target, computes semantic intersect, generates facit",
                "parameters": [
                    {
                        "name": "job_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Preflight analysis complete",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PreflightResult"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/writer/generate/{job_id}": {
            "post": {
                "operationId": "generateArticle",
                "summary": "Generate article",
                "description": "Generates article from preflight facit using Claude AI",
                "parameters": [
                    {
                        "name": "job_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Article generated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GeneratedArticle"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/validate/job/{job_id}": {
            "post": {
                "operationId": "validateArticle",
                "summary": "Validate article quality",
                "description": "Checks LIX, AI markers, link placement",
                "parameters": [
                    {
                        "name": "job_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Validation results",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationResult"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}